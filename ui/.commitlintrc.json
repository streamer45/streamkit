{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert",
        "ci",
        "build",
        "wip"
      ]
    ],
    "subject-case": [0]
  },
  "helpUrl": "https://www.conventionalcommits.org/"
}
